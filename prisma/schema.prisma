generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                 String            @id @default(cuid())
  name               String?
  email              String?           @unique
  emailVerified      DateTime?
  image              String?
  password           String?
  role               String            @default("PLAYER")
  createdAt          DateTime          @default(now())
  updatedAt          DateTime          @updatedAt
  accounts           Account[]
  draftPicks         DraftPick[]
  administeredGroups Group[]           @relation("GroupAdmin")
  memberships        GroupMembership[]
  sessions           Session[]
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expires   DateTime
  createdAt DateTime @default(now())

  @@unique([email, token])
}

model GroupMembership {
  id              String   @id @default(cuid())
  userId          String
  groupId         String
  role            String   @default("MEMBER")
  joinedAt        DateTime @default(now())
  score           Int      @default(0)
  draftPosition   Int      @default(0)
  finalScoreGuess Int?
  nitWinnerGuess  String?
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  group           Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@unique([userId, groupId])
}

model Account {
  id                String   @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
}

model Tournament {
  id          String       @id @default(cuid())
  name        String       @unique
  year        Int
  status      String       @default("SETUP")
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  gameResults GameResult[]
  groups      Group[]
  teams       Team[]
}

model Team {
  id           String       @id @default(cuid())
  name         String
  seed         Int
  region       String
  tournamentId String
  isEliminated Boolean      @default(false)
  draftPicks   DraftPick[]
  wonGames     GameResult[] @relation("Winner")
  lostGames    GameResult[] @relation("Loser")
  tournament   Tournament   @relation(fields: [tournamentId], references: [id], onDelete: Cascade)

  @@unique([tournamentId, name])
}

model Group {
  id           String            @id @default(cuid())
  name         String
  tournamentId String
  adminId      String
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt
  draftPicks   DraftPick[]
  tournament   Tournament        @relation(fields: [tournamentId], references: [id], onDelete: Cascade)
  admin        User              @relation("GroupAdmin", fields: [adminId], references: [id])
  memberships  GroupMembership[]
}

model DraftPick {
  id         String   @id @default(cuid())
  groupId    String
  userId     String
  teamId     String
  round      Int
  pickNumber Int
  createdAt  DateTime @default(now())
  group      Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  team       Team     @relation(fields: [teamId], references: [id])

  @@unique([groupId, teamId])
  @@unique([groupId, round, pickNumber])
}

model GameResult {
  id           String     @id @default(cuid())
  tournamentId String
  round        Int
  winnerId     String?
  loserId      String?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  tournament   Tournament @relation(fields: [tournamentId], references: [id], onDelete: Cascade)
  winner       Team?      @relation("Winner", fields: [winnerId], references: [id])
  loser        Team?      @relation("Loser", fields: [loserId], references: [id])
}

model HallOfFame {
  id          String   @id @default(cuid())
  year        Int      @unique
  winnerName  String
  winningTeam String
  totalPoints Int
  groupName   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
